---
import "@fontsource/rubik";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="font-rubik">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/img/logos-ciudatos/ciudatos-favicon.png"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ciudatos | {title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
