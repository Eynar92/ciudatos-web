---

interface Props {
  fecha:string,
  titulo:string,
  imagen:string,
  url:string
  container:string
}
const { fecha, titulo, imagen,url,container } = Astro.props;
---

<div
  onclick={container}
  class="mt-10 ml-7 mr-5 w-10/12 lg:h-auto lg:w-auto md:h-96 md:w-11/12 md:ml-12 sm:mt-10 sm:ml-5 sm:w-auto items-center rounded-lg border border-gray-100 border-b-4 shadow-md lg:hover:border-gray-300 mx-4 md:mx-0 cursor-pointer"
>
  <div class="h-52">
    <a href={url}>
      <img
        src={imagen}
        alt=""
        class="object-cover w-full h-full md:max-h-80 sm:max-h-40"
      />
    </a>
  </div>
  <div class="ml-14 mt-5 mb-8 mr-16">
    <a href="#" class="text-2xl font-semibold font-raleway hover:underline">{titulo}</a>

    <p class="text-gray-700 text-lg font-extralight mt-5 font-raleway">{fecha}</p>
  </div>
</div>
